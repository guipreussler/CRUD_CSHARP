@model TesteDeConhecimento.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Venda</h1>

<hr />

<div class="row">
    <center>
    <div class="col-md-4">
        <br />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label">Nome do Cliente</label>
                @*<input asp-for="ClienteId" class="form-control" />*@
                @Html.DropDownList("ClienteId", ViewBag.Clientes as SelectList, "Selecione um cliente", new { @class = "form-control" })
                <span asp-validation-for="ClienteId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label">Nome do Produto</label>
                @*<input asp-for="ProdutoId" class="form-control" />*@
                @Html.DropDownList("ProdutoId", ViewBag.Produtos as SelectList, "Selecione um produto", new { @class = "form-control" })
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="QtdVenda" class="control-label">Quantidade</label>
                <input asp-for="QtdVenda" class="form-control" />
                <span asp-validation-for="QtdVenda" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="VlrUnitarioVenda" class="control-label"></label>
                <input asp-for="VlrUnitarioVenda" class="form-control" />
                <span asp-validation-for="VlrUnitarioVenda" class="text-danger"></span>
            </div>*@
            @*<div class="form-group">
                <label asp-for="DthVenda" class="control-label"></label>
                <input asp-for="DthVenda" class="form-control" />
                <span asp-validation-for="DthVenda" class="text-danger"></span>
            </div>*@
            @*<div class="form-group">
                <label asp-for="VlrTotalVenda" class="control-label"></label>
                <input asp-for="VlrTotalVenda" class="form-control" />
                <span asp-validation-for="VlrTotalVenda" class="text-danger"></span>
            </div>*@
            <br /><br />
            <div class="form-group">
                <a class="btn btn-secondary"asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </center>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
