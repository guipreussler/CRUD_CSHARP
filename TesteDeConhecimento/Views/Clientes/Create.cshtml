@model TesteDeConhecimento.Models.Cliente

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Cliente</h1>

<hr />

<div class="row">
    <center>
        <div class="col-md-4">
        <br />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nmCliente" class="control-label">Nome do Cliente</label>
                <input asp-for="nmCliente" class="form-control" />
                <span asp-validation-for="nmCliente" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <br /><br />
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                <input type="submit" value="Cadastrar" class="btn btn-success" />              
            </div>
        </form>
    </div>
    </center>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
